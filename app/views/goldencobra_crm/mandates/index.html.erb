<h1>Listing mandates</h1>

<table>
  <tr>
    <th>External</th>
    <th>Server name</th>
    <th>Server ip</th>
    <th>Reference</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mandates.each do |mandate| %>
  <tr>
    <td><%= mandate.external_id %></td>
    <td><%= mandate.server_name %></td>
    <td><%= mandate.server_ip %></td>
    <td><%= mandate.reference_id %></td>
    <td><%= link_to 'Show', mandate %></td>
    <td><%= link_to 'Edit', edit_mandate_path(mandate) %></td>
    <td><%= link_to 'Destroy', mandate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

